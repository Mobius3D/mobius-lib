{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://apexslicer.com/schemas/printer/status.json",
  "title": "status",
  "description": "Report of printer's current state",
  "type": "object",
  "properties": {
    "serialNumber": { "$ref" : "../defs.json#/definitions/mongoObjectId" },
    "status": { "$ref" : "../defs.json#/definitions/printerStatesEnum" },
    "jobId": { "$ref" : "../defs.json#/definitions/mongoObjectId" },
    "printSeconds": {
      "type": "number",
      "minimum": 0
    },
    "file": {
      "type": "string",
      "minLength": 1,
      "maxLength": 512
    },
    "fileSize": {
      "type": "integer",
      "minimum": 0
    },
    "bytesRead": {
      "type": "integer",
      "minimum": 0
    },
    "estimatedTime": {
      "type": "number",
      "minimum": 0
    }
  },
  "required": [
    "serialNumber", "status"
  ]
}
