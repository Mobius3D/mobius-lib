{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://apexslicer.com/schemas/defs.json",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "jobObject": {
      "type": "object",
      "properties": {
        "jobId": {
          "$ref": "#/definitions/mongoObjectId",
          "description": "Print job id"
        },
        "jobName": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120,
          "description": "Job name"
        },
        "imageFile": {
          "$ref": "#/definitions/url",
          "description": "full URL for a rendering of the job"
        },
        "imageThumbnailFile": {
          "$ref": "#/definitions/url",
          "description": "URL for a small rendering of the job"
        },
        "owner": {
          "type": "string",
          "minLength": 1,
          "maxLength": 97,
          "description": "Display name of the job's owner"
        },
        "ownerPhotoFile": {
          "$ref": "#/definitions/url",
          "description": "URL for the owner's profile image"
        }
      },
      "required": ["jobId", "jobName"]
    },
    "mediaUploadMethods": {
      "description": "HTTP request method for media upload",
      "type": "string",
      "enum": ["POST"]
    },
    "mediaUploadTypes": {
      "description": "Media upload type of the returned URL",
      "type": "string",
      "enum": [
        "idle",
        "printing",
        "timelapse"
      ]
    },
    "mongoObjectId": {
      "type": "string",
      "minLength": 24,
      "maxLength": 24,
      "pattern": "^[a-fA-F0-9]{24}$"
    },
    "printerStatesEnum": {
      "enum": [
        "READY",
        "PREPARING",
        "PRINTING",
        "PAUSED",
        "POSTPROCESSING",
        "CANCELING",
        "COMPLETE",
        "UPDATING",
        "LOCAL",
        "ERROR",
        "DISCONNECTED",
        "DOOR",
        "CLEAR"
      ]
    },
    "url": {
      "type": "string",
      "minLength": 10,
      "maxLength": 256
    }
  }
}
